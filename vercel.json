{
    "version": 2,
    "builds": [
        {
            "src": "*.html",
            "use": "@vercel/static"
        },
        {
            "src": "css/*.css",
            "use": "@vercel/static"
        },
        {
            "src": "js/*.js",
            "use": "@vercel/static"
        },
        {
            "src": "img/*",
            "use": "@vercel/static"
        },
        {
            "src": "fonts/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/"
        }
    ]
}